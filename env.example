# База данных PostgreSQL
DB_TYPE=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=beauty_studio
DB_USER=beauty_user
DB_PASSWORD=beauty_password

# Redis для сессий
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Секретный ключ для сессий (ОБЯЗАТЕЛЬНО измените в production!)
SESSION_SECRET=beauty-studio-secret-key-change-in-production

# Микросервисы URLs
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
BOOKING_SERVICE_URL=http://booking-service:3003
CATALOG_SERVICE_URL=http://catalog-service:3004
FILE_SERVICE_URL=http://file-service:3005
NOTIFICATION_SERVICE_URL=http://notification-service:3006
TELEGRAM_SERVICE_URL=http://telegram-service:3007

# MinIO (файловое хранилище)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET=beauty-studio

# Окружение
NODE_ENV=production
LOG_LEVEL=DEBUG
DEBUG=*
PORT=3000
BEHIND_HTTPS_PROXY=true

