# Пример конфигурации для HTTPS

# Включить HTTPS (true/false)
USE_HTTPS=true

# Порт для HTTPS сервера (по умолчанию 3443)
HTTPS_PORT=3443

# Домен для SSL сертификата Let's Encrypt
# Должен соответствовать домену, для которого получен сертификат
DOMAIN=example.com
SSL_DOMAIN=example.com

# Путь к директории с сертификатами Let's Encrypt (по умолчанию /etc/letsencrypt/live)
SSL_CERT_PATH=/etc/letsencrypt/live

# Альтернативный способ: указать прямые пути к сертификатам
# SSL_CERT_FILE=/etc/letsencrypt/live/example.com/fullchain.pem
# SSL_KEY_FILE=/etc/letsencrypt/live/example.com/privkey.pem

# Принудительный редирект HTTP на HTTPS (true/false, по умолчанию true)
FORCE_HTTPS=true

# Обычный HTTP порт (по умолчанию 3000)
# Используется для редиректа на HTTPS, если FORCE_HTTPS=true
PORT=3000

